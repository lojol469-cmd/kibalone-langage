cellule Arbre {
    // Importation des IA (dépendances vivantes)
    importe IA:vision.feuilles
    importe IA:climat.temperature
    importe IA:LLM.kibali-core

    // États statiques
    couleur: "vert"
    age: 12
    espece: "chêne"

    // Capteurs dynamiques
    temperature: IA:climat.temperature.lire()
    mouvement_feuilles: IA:vision.feuilles.predict()

    // Cerveau organique pour décisions
    reaction: cerveau:comment dois-je bouger selon la température ?

    // Mémoire interne pour biologie
    memoire: rag:arbres_biology

    // Comportements vivants
    action pousser() {
        cerveau:comment pousser correctement ?
        age: age + 1
    }

    action reagir_climat() {
        temperature: IA:climat.temperature.lire()
        mouvement_feuilles: IA:vision.feuilles.predict()
        reaction: cerveau:que dois-je faire par cette température ?
    }

    action reagir_a(climat_cellule) {
        temperature: climat_cellule.temperature_actuelle
        mouvement_feuilles: IA:vision.feuilles.predict()
        reaction: cerveau:comment réagir à cette température ?
    }